---
// src/pages/iptv-[region].astro
import { locations, slugify } from '../data/data';
import Layout from '../layouts/Layout.astro';
import Watis from '../components/Watis'
import LegalFAQ from '../components/LegalFAQ.astro'
import ShowCase from '../components/ShowCase';
import Movies from '../components/Movies.astro';
import Sports from '../components/Sports.astro';

export async function getStaticPaths() {
  return Object.keys(locations).map((region) => ({
    params: { region: slugify(region) },
    props: { 
      region,
      cities: locations[region]
    }
  }));
}

const { region, cities } = Astro.props;

const pricingPlans = [
  {
    name: 'SILVER',
